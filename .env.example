# Rabbit Environment Configuration
# Copy this file to .env and update the values

# ─────────────────────────────────────────────────────────────────
# Application
# ─────────────────────────────────────────────────────────────────
APP_NAME=Rabbit
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/rabbit

# ─────────────────────────────────────────────────────────────────
# Database
# ─────────────────────────────────────────────────────────────────
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=rabbit
DB_USERNAME=root
DB_PASSWORD=

# ─────────────────────────────────────────────────────────────────
# API Configuration
# ─────────────────────────────────────────────────────────────────
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# ─────────────────────────────────────────────────────────────────
# Security
# ─────────────────────────────────────────────────────────────────
# Generate a random 32-character string
APP_SECRET=your-secret-key-here-change-this

# CORS allowed origins (comma-separated)
CORS_ORIGINS=*

# ─────────────────────────────────────────────────────────────────
# Notifications
# ─────────────────────────────────────────────────────────────────
# Maximum notifications per app
MAX_NOTIFICATIONS=10000

# Notification retention days (0 = forever)
NOTIFICATION_RETENTION=90

# ─────────────────────────────────────────────────────────────────
# Logging
# ─────────────────────────────────────────────────────────────────
LOG_LEVEL=debug
LOG_CHANNEL=file
